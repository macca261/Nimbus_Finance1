{
  "name": "nimbus-finance",
  "private": true,
  "version": "0.1.0",
  "description": "Nimbus Finance monorepo (EU/German friendly)",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev:web": "pnpm --filter ./apps/web dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier -w .",
    "profiles:validate": "pnpm --filter @nimbus/bank-profiles validate",
    "harvester:list": "pnpm --filter @nimbus/harvester run list",
    "harvester:run": "pnpm --filter @nimbus/harvester run run",
    "parse:demo": "node tools/scripts/parse-demo.mjs",
    "parse": "pnpm --filter @nimbus/csv-core parse",
    "ci": "pnpm -r build && pnpm -r test",
    "anonymize": "ts-node --transpile-only tools/anonymize/from-last-upload.ts",
    "fixture": "pnpm anonymize && pnpm -r test",
    "uc:dev": "cd tools/ultimate-csv && pnpm -w i && docker compose -f docker/compose.yaml up --build",
    "uc:test": "cd tools/ultimate-csv && pnpm -r test",
    "uc:ingest:node": "node tools/ultimate-csv/node/dist/src/cli.js ingest --input - --validate",
    "app:dev": "pnpm dev:web"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "fast-check": "^3.17.1",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0"
  }
}
